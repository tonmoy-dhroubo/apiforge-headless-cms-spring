					},
					"response": []
				},
				{
					"name": "2. Create 'Article' Type",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Article\",\n  \"pluralName\": \"Articles\",\n  \"apiId\": \"articles\",\n  \"description\": \"News and blog articles\",\n  \"fields\": [\n    {\n      \"name\": \"Title\",\n      \"fieldName\": \"title\",\n      \"type\": \"SHORT_TEXT\",\n      \"required\": true,\n      \"unique\": true\n    },\n    {\n      \"name\": \"Content\",\n      \"fieldName\": \"content\",\n      \"type\": \"RICH_TEXT\",\n      \"required\": true,\n      \"unique\": false\n    },\n    {\n      \"name\": \"Is Published\",\n      \"fieldName\": \"is_published\",\n      \"type\": \"BOOLEAN\",\n      \"required\": false,\n      \"unique\": false\n    },\n    {\n      \"name\": \"Cover Image\",\n      \"fieldName\": \"cover_image\",\n      \"type\": \"MEDIA\",\n      \"required\": false,\n      \"unique\": false\n    },\n    {\n      \"name\": \"Written By\",\n      \"fieldName\": \"author_id\",\n      \"type\": \"RELATION\",\n      \"targetContentType\": \"authors\",\n      \"relationType\": \"MANY_TO_ONE\",\n      \"required\": false,\n      \"unique\": false\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/content-types",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"content-types"
							]
						}
					},
					"response": []
				},
				{
