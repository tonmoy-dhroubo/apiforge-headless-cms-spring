							"raw": "{\n  \"name\": \"Author\",\n  \"pluralName\": \"Authors\",\n  \"apiId\": \"authors\",\n  \"description\": \"Blog post authors\",\n  \"fields\": [\n    {\n      \"name\": \"Full Name\",\n      \"fieldName\": \"full_name\",\n      \"type\": \"SHORT_TEXT\",\n      \"required\": true,\n      \"unique\": false\n    },\n    {\n      \"name\": \"Bio\",\n      \"fieldName\": \"bio\",\n      \"type\": \"LONG_TEXT\",\n      \"required\": false,\n      \"unique\": false\n    }\n  ]\n}",
							"options": {
